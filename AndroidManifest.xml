<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="no.glv.android.stdntworkflow"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/student"
        android:label="@string/app_name"
        android:theme="@style/newAppBaseTheme">
        
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppBaseTheme"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StudentClassListActivity"
            android:theme="@style/AppBaseTheme"
            android:label="@string/activity.studentList.title" >
        </activity>
        <activity
            android:name=".StudentInfoActivity"
            android:label="@string/activity.studentInfo.title"
            android:parentActivityName=".StudentClassListActivity" >
        </activity>
        <activity
            android:name=".LoadDataActivity"
            android:label="@string/activity.loadData.title"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".NewTaskActivity"
            android:label="@string/title_activity_new_task"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".StdInfoActivity"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
            android:parentActivityName=".MainActivity"
            android:label="@string/title_activity_std_info" >
        </activity>
        <activity
            android:name=".TaskActivity"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
            android:parentActivityName=".MainActivity"
            android:label="@string/title_activity_task">
        </activity>
        <activity
            android:name=".NewActivity"
            android:theme="@android:style/Theme.Holo"
            android:label="@string/title_activity_new" >
        </activity>
    </application>

</manifest>
