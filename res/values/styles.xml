<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/actionBar</item>
        <item name="actionBarStyle">@style/actionBar</item>
    </style>

    <style name="TV.standard" parent="AppTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TV.header1" parent="TV.standard">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TV.header2" parent="TV.header1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TV.std" parent="TV.standard">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TV.std.bold" parent="TV.std">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TV.std.L" parent="TV.standard">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TV.std.L.blue" parent="TV.standard">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#33b5e5</item>
    </style>

    <style name="ET" parent="TV.standard">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#FFFFFF</item>
        </style>

    <style name="ET.task" parent="ET">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10sp</item>
        </style>

    <style name="BTN" parent="AppTheme">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#33b5e5</item>
        <item name="android:layout_marginTop">5sp</item>
    </style>

    <style name="actionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#ffbb33</item>
    </style>

</resources>