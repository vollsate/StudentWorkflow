<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    
    <TextView android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/counter_bg"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"/>
    
    <TextView
        android:id="@+id/TV.task.name"
        style="@style/TV.std.L.blue"
        android:layout_toRightOf="@id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5sp"
        android:layout_marginRight="5sp"
        android:background="@drawable/main_textview"
        android:ellipsize="marquee"
        android:hint="Task name"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/TV.task.desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/TV.task.name"
        android:layout_alignParentRight="true"
        android:hint="Task desc"
        android:text="TextView" />

    <View
        style="@style/divider"
        android:layout_height="2sp"
        android:layout_below="@id/TV.task.name" />

</RelativeLayout>