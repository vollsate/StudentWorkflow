<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:paddingBottom="@dimen/activity_vertical_margin_small"
    android:paddingLeft="@dimen/activity_horizontal_margin_small"
    android:paddingRight="@dimen/activity_horizontal_margin_small"
    android:paddingTop="@dimen/activity_vertical_margin_small"
    tools:context="no.glv.android.stdntworkflow.MainFragment" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:orientation="vertical">

        <TextView
            android:id="@+id/TV.header"
            style="@style/TV.header1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TV.header.text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/TV.maininfo"
            style="@style/TV.std"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="@string/TV.maininfo.text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <!-- INSTALLED CLASSES -->

        <TextView
            android:id="@+id/TV.installedClasses"
            style="@style/TV.header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="@string/TV.installedClasses.text" />


        <LinearLayout
            android:id="@+id/FR.installedClasses.container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

        <!-- INSTALLED TAKSS -->

        <TextView
            android:id="@+id/TV.installedTasks"
            style="@style/TV.header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="@string/TV.installedTasks.text" />


        <LinearLayout
            android:id="@+id/FR.installedTasks.container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        </LinearLayout>

</ScrollView>