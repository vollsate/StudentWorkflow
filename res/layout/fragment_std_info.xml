<GridLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:columnCount="2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="8"
    tools:context="no.glv.android.stdntworkflow.StdInfoFragment" >

    <TextView
        android:id="@+id/TV.info.header"
        style="@style/TV.header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="start"
        android:layout_marginBottom="15sp"
        android:layout_row="0"
        android:gravity="center"
        android:text="@string/def" />
 	 		
    <TextView
        android:id="@+id/TV.info.firstName"
        style="@style/TV.std"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="end"
        android:layout_marginTop="10sp"
        android:text="@string/stdInfo.fName" />
    
    <EditText
        android:id="@+id/ET.info.firstName"
        style="@style/ET.stdInfo"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="bottom|fill_horizontal"
        android:layout_row="1"
        android:gravity="start"
        android:hint="Content"
        android:inputType="text">

        <requestFocus />
    </EditText>


    <TextView
        android:id="@+id/TV.info.lastName"
        style="@style/TV.std"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/stdInfo.lName" />

    <EditText
        android:id="@+id/ET.info.LastName"
        style="@style/ET.stdInfo"
        android:inputType="text"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginLeft="5sp"
        android:layout_marginStart="5sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|fill_horizontal"
        android:gravity="start"
        android:ems="10" />

    
    <TextView
        android:id="@+id/TV.info.ident"
        style="@style/TV.std"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/stdInfo.ident" />

    <EditText
        android:id="@+id/ET.info.ident"
        style="@style/ET.stdInfo"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_marginLeft="5sp"
        android:layout_marginStart="5sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|fill_horizontal"
        android:gravity="start"
        android:ems="10" >
    </EditText>
    
    <TextView
        android:id="@+id/TV.info.birth"
        style="@style/TV.std"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/stdInfo.birth" />

    <EditText
        android:id="@+id/ET.info.birth"
        style="@style/ET.stdInfo"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_marginLeft="5sp"
        android:layout_marginStart="5sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|fill_horizontal"
        android:gravity="start"
        android:ems="10" >
    </EditText>

    <TextView
        android:id="@+id/TV.info.adr"
        style="@style/TV.std"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="5"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/stdInfo.adr" />

    <EditText
        android:id="@+id/ET.info.pc"
        style="@style/ET.stdInfo"
        android:layout_column="1"
        android:layout_row="5"
        android:layout_marginLeft="5sp"
        android:layout_marginStart="5sp"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:ems="10" >
    </EditText>
    
    <EditText
        android:id="@+id/ET.info.adr"
        style="@style/ET.stdInfo"
        android:layout_column="1"
        android:layout_row="6"
        android:layout_marginLeft="5sp"
        android:layout_marginStart="5sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10" >
    </EditText>
    
</GridLayout>
