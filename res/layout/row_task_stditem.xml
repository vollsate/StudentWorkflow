<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/IV.task.stditem.save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:src="@drawable/save" />

        <EditText
            android:id="@+id/ET.task.stditem.comment"
            style="@style/ET"
            android:layout_toLeftOf="@id/IV.task.stditem.save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:background="@drawable/custom_edittext"
            android:hint="Kommentar" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/TV.std.bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:gravity="end"
            android:text="@string/task_date" />

        <Button
            android:id="@+id/BTN.task.date"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/task.marginLeft"
            android:layout_marginStart="@dimen/task.marginLeft"
            android:background="@drawable/calendar"/>

        <EditText
            android:id="@+id/ET.task.stditem.date"
            style="@style/ET.L"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/custom_edittext"
            android:focusable="true"
            android:hint="@string/task_date"
            android:inputType="text" />
    </LinearLayout>
    
</LinearLayout>