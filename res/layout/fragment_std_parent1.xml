<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:columnCount="2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="no.glv.android.stdntworkflow.StdInfoFragment" >

    <TextView
        android:id="@+id/TV.info.p1Header"
        style="@style/TV.header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginTop="10sp"
        android:layout_row="0"
        android:text="@string/stdinfo_header1" />

    <!-- NAME -->

    <TextView
        android:id="@+id/TV.info.p1Name"
        style="@style/TV.std.bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TV.info.p1Header"
        android:layout_column="0"
        android:layout_gravity="end"
        android:layout_marginRight="5sp"
        android:layout_marginTop="10sp"
        android:layout_row="1"
        android:text="@string/stdinfo_name" />

    <EditText
        android:id="@+id/ET.info.p1Name"
        style="@style/ET.stdInfo"
        android:layout_width="50dp"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|bottom"
        android:layout_row="1"
        android:gravity="start"
        android:hint="Content"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <!-- MAIL -->
    
    <TextView
        android:id="@+id/TV.info.p1Mail"
        style="@style/TV.std.bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_gravity="end"
        android:layout_marginTop="10sp"
        android:gravity="end"
        android:text="@string/stdinfo_mail" />

    <EditText
        android:id="@+id/ET.info.p1Mail"
        style="@style/ET.stdInfo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:hint="Content" >
    </EditText>

    <!-- PHONENUMBERS -->

    <TextView
        android:id="@+id/TV.info.p1Header2"
        style="@style/TV.header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ET.info.p1Mail"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginTop="10sp"
        android:layout_row="3"
        android:text="@string/stdinfo_header2" />

	<!-- MOBIL -->
    
    <TextView
        android:id="@+id/TV.info.p1Phone.mob"
        style="@style/TV.std.bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_gravity="end"
        android:layout_marginTop="10sp"
        android:text="@string/stdinfo_phone_mobile" />

    <EditText
        android:id="@+id/ET.info.p1Phone.mob"
        style="@style/ET.stdInfo"
        android:layout_column="1"
        android:layout_row="4"
        android:layout_marginLeft="10sp"
        android:layout_marginStart="10sp"
        android:ems="10" >
    </EditText>

    <!-- HOME -->
    
    <TextView
        android:id="@+id/TV.info.p1Phone.home"
        style="@style/TV.std.bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_gravity="end"
        android:layout_marginTop="10sp"
        android:text="@string/stdinfo_phone_home" />

    <EditText
        android:id="@+id/ET.info.p1Phone.home"
        style="@style/ET.stdInfo"
        android:layout_column="1"
        android:layout_row="5"
        android:layout_marginLeft="10sp"
        android:layout_marginStart="10sp"
        android:ems="10" >
    </EditText>

    <!-- WORK -->
    
    <TextView
        android:id="@+id/TV.info.p1Phone.work"
        style="@style/TV.std.bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="6"
        android:layout_gravity="end"
        android:layout_marginRight="5sp"
        android:layout_marginTop="10sp"
        android:text="@string/stdinfo_phone_work" />

    <EditText
        android:id="@+id/ET.info.p1Phone.work"
        style="@style/ET.stdInfo"
        android:layout_column="1"
        android:layout_marginLeft="10sp"
        android:layout_marginStart="10sp"
        android:layout_row="6"
        android:ems="10" >
    </EditText>

</GridLayout>