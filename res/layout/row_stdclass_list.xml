<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/padding_stdlist_small"
    android:paddingLeft="@dimen/padding_stdlist_small"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/TV.stdlist.name"
        style="@style/TV.std"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:hint="Student name"
        android:paddingTop="@dimen/padding_stdlist_small"
        android:singleLine="true" />
    
    <TextView
        android:id="@+id/TV.stdlist.ident"
        style="@style/TV.std.S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TV.stdlist.name"
        android:layout_alignStart="@+id/TV.stdlist.name"
        android:layout_below="@+id/TV.stdlist.name"
        android:ellipsize="marquee"
        android:hint="ident"
        android:paddingBottom="@dimen/padding_stdlist_small"
        android:singleLine="true" />

    <ImageView
        android:id="@+id/task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/task_desc"
        android:src="@drawable/ic_action_task" />

    <TextView
        android:id="@+id/TV.stdlist.birth"
        style="@style/TV.std.S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/TV.stdlist.name"
        android:layout_alignBottom="@id/TV.stdlist.ident"
        android:ellipsize="marquee"
        android:hint="birth"
        android:paddingBottom="@dimen/padding_stdlist_small"
        android:singleLine="true" />
 
</RelativeLayout>