<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="no.glv.android.stdntworkflow"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/student"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StudentListActivity"
            android:label="@string/activity.studentList.title" >
        </activity>
        <activity
            android:name=".StudentInfoActivity"
            android:label="@string/activity.studentInfo.title" 
            android:parentActivityName=".StudentListActivity">
        </activity>
        <activity
            android:name=".LoadDataActivity"
            android:label="@string/activity.loadData.title" 
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".NewTaskActivity"
            android:label="@string/title_activity_new_task" 
            android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>
